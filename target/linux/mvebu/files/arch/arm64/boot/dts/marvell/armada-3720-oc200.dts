/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "armada-372x.dtsi"

/ {
	model = "Marvell Armada 3720 ECK Board";
	compatible = "tplink,oc200", "marvell,armada-3720-oc200", "marvell,armada-3720-eck", "marvell,armada3720", "marvell,armada3710";

	chosen {
		bootargs = "console=ttyMV0,115200";
		stdout-path = "serial0:115200n8";
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x00000000 0x00000000 0x20000000>;
	};

	soc {
		internal-regs {
			reg_avs: avs@11500 {
				status = "okay";
			};

			spinctrl: south-bridge-pinctrl@18830 {
				system_led_pins: system-led-pins {
					marvell,pins = "mpp1";
					marvell,function = "gpio";
				};

				system_reset_pins: system-reset-pins {
					marvell,pins = "mpp4";
					marvell,function = "gpio";
				};
			};

			u3d@50000 {
				status = "disabled";
				//phys = <&a3700_comphy 0 COMPHY_USB3>;
				phy-names = "usb";
			};

			udc@54100 {
				status = "disabled";
				//phys = <&utmi_usb32>;
				phy-names = "usb";
			};

			usb3@58000 {
				status = "okay";
			};

			usb2@5e000 {
				status = "okay";
			};

			utmi_usb32: utmi@5d000 {
				status = "okay";
			};

			utmi_usb2: utmi@5f000 {
				status = "okay";
			};

			vcc_sd_reg1: regulator@0 {
				compatible = "regulator-gpio";
				regulator-name = "vcc_sd1";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;

				gpios = <&gpionb 4 GPIO_ACTIVE_HIGH>;
				gpios-states = <0>;
				states = <1800000 0x1
					  3300000 0x0>;

				enable-active-high;
			};


			bm: bm@c0000 {
				compatible = "marvell,armada-380-neta-bm";
				reg = <0xc0000 0xac>;
				clocks = <&sb_periph_clk 9>;
				internal-mem = <&bm_bppi>;
				status = "okay";
			};

			bm_bppi: bm-bppi {
				compatible = "mmio-sram";
				reg = <0xc8000 0x1000>;
				clocks = <&sb_periph_clk 9>;
				no-memory-wc;
				status = "okay";
			};

			eip97: eip97@90000 {
				status = "okay";
			};
		};
	};

