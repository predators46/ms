	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-0 = <&system_led_pins>;
		pinctrl-names = "default";

		system-led {
			label = "system-led";
			gpios = <&gpiosb 1 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-0 = <&system_reset_pins>;
		pinctrl-names = "default";

		reset-button {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpiosb 4 GPIO_ACTIVE_LOW>;
		};
	};
};

&spi0 {
	status = "okay";

	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>; /* Chip select 0 */
		spi-max-frequency = <104000000>;
		m25p,fast-read;

		pinctrl-names = "default";
		pinctrl-0 = <&spi_cs1_pins &spi_quad_pins>;
	};
};

&uart0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&eth0 {
	phy-mode = "rgmii";
	status = "okay";
	buffer-manager = <&bm>;
	bm,pool-long = <1>;
	bm,pool-short = <3>;

	fixed-link {
		speed = <100>;
		full-duplex;
		//pause;
	};

};

&mdio {
	switch0: switch@0 {
		compatible = "qca,ar8236";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0 0>;
	};
};

&sdhci1 {
	wp-inverted;
	bus-width = <4>;
	cd-gpios = <&gpionb 3 GPIO_ACTIVE_LOW>;
	no-1-8-v;
	vqmmc-supply = <&vcc_sd_reg1>;
	marvell,pad-type = "sd";
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&sdio_pins>;
};

&sdhci0 {
	marvell,pad-type = "fixed-1-8v";
	non-removable;
	bus-width = <8>;
	cap-mmc-highspeed;
	max-frequency = <52000000>;
	marvell,xenon-emmc;
	marvell,xenon-broken-hs200;
	marvell,xenon-tun-count = <9>;
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&mmc_pins>;
	#address-cells = <1>;
	#size-cells = <0>;
	mmccard: mmccard@0 {
		compatible = "mmc-card";
		reg = <0>;
	};
};
